<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mapFragment">

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.geobotanica.geobotanica.ui.fragment.MapFragment"
        android:label="Geobotanica"
        tools:layout="@layout/fragment_map" >
        <action
            android:id="@+id/action_mapFragment_to_plantDetailFragment"
            app:destination="@id/plantDetailFragment"
            app:launchSingleTop="false"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/plantDetailFragment"
        android:name="com.geobotanica.geobotanica.ui.fragment.PlantDetailFragment"
        android:label="Plant Details" >
        <argument android:name="plantId" />
    </fragment>
</navigation>