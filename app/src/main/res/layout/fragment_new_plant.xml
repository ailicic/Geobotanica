<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.newPlant.NewPlantFragment"
    tools:showIn="@layout/activity_new_plant">

    <TextView
        android:id="@+id/plantTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/plant_type"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--TODO: Increase spinner font size
    https://www.codingdemos.com/android-custom-spinner-images-text/
    http://tekeye.uk/android/examples/ui/changing-android-spinner-text-size-->
    <Spinner
        android:id="@+id/plantTypeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:entries="@array/plant_types"
        app:layout_constraintBottom_toBottomOf="@+id/plantTypeText"
        app:layout_constraintStart_toEndOf="@id/plantTypeText"
        app:layout_constraintTop_toTopOf="@+id/plantTypeText" />

    <View
        android:id="@+id/PlantTypeDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plantTypeSpinner" />

    <!--TODO: Make button view: show large image when clicked-->
    <ImageView
        android:id="@+id/plantPhoto"
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/plant_type_tree"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@+id/photoTypeSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PlantTypeDivider"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/photoTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/photo_type"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/plantPhoto" />

    <Spinner
        android:id="@+id/photoTypeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:entries="@array/photo_types"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photoTypeText" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/takePhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fab_margin"
        app:fabSize="normal"
        android:scaleType="center"
        app:srcCompat="@drawable/outline_camera_white_48dp"
        app:layout_constraintEnd_toEndOf="@+id/photoTypeSpinner"
        app:layout_constraintStart_toStartOf="@+id/photoTypeSpinner"
        app:layout_constraintTop_toBottomOf="@+id/photoTypeSpinner" />

    <View
        android:id="@+id/photoTypeDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plantPhoto" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/commonNameEditText"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photoTypeDivider">

    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:hint="@string/common_name" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/latinNameEditText"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commonNameEditText">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:hint="@string/latin_name" />
    </android.support.design.widget.TextInputLayout>


    <!--TODO: Create a "Dimension" view group that includes the TextView, EditText and Spinner. Then the group can be hidden as needed.
    https://antonioleiva.com/custom-views-android-kotlin/
    -->
    <TextView
        android:id="@+id/heightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/height"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        app:layout_constraintBottom_toBottomOf="@+id/heightEditText"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/heightEditText"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@id/diameterText"
        app:layout_constraintTop_toBottomOf="@+id/latinNameEditText"
        tools:ignore="LabelFor" />

    <Spinner
        android:id="@+id/heightUnitsSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:entries="@array/measurement_units"
        app:layout_constraintBottom_toBottomOf="@+id/heightEditText"
        app:layout_constraintStart_toEndOf="@+id/heightEditText" />

    <TextView
        android:id="@+id/diameterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/diameter"
        app:layout_constraintBottom_toBottomOf="@+id/diameterEditText"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/diameterEditText"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@id/diameterText"
        app:layout_constraintTop_toBottomOf="@+id/heightEditText"
        tools:ignore="LabelFor" />

    <Spinner
        android:id="@+id/trunkDiameterUnitsSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:entries="@array/measurement_units"
        app:layout_constraintBottom_toBottomOf="@+id/diameterEditText"
        app:layout_constraintStart_toEndOf="@+id/diameterEditText" />

    <include layout="@layout/gps_compound_view"/>

</android.support.constraint.ConstraintLayout>



