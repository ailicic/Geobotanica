<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/plantMeasurement" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="@id/plantMeasurement"
        app:layout_constraintBottom_toBottomOf="@+id/editText" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toTopOf="@id/plantMeasurement"
        app:layout_constraintStart_toEndOf="@id/textView"
        tools:ignore="LabelFor" />

    <Spinner
        android:id="@+id/unitsSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:entries="@array/measurement_units"
        app:layout_constraintStart_toEndOf="@+id/editText"
        app:layout_constraintBottom_toBottomOf="@+id/editText" />

    <EditText
        android:id="@+id/inchesEditText"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/plantMeasurement"
        app:layout_constraintStart_toEndOf="@id/unitsSpinner"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/inchesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/inches"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/inchesEditText"
        app:layout_constraintBottom_toBottomOf="@+id/editText" />

</androidx.constraintlayout.widget.ConstraintLayout>
